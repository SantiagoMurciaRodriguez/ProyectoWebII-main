@model ProyectoAerolineaWeb.Models.Servicios

<video class="video-servicios" autoplay loop muted playsinline>
    <source src="/mp4/servicio2.mp4" type="video/mp4">
    
</video>

<h2>Selecciona servicios adicionales</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="ServiciosPost" method="post">
    <input type="hidden" asp-for="PasajerosId"/>
    <input type="hidden" asp-for="VueloId"/>
    <input type="hidden" asp-for="TarifaId"/>

    <div class="form-group">
        <label for="Maletas">Maletas (disponibles: @ViewBag.StockMaletas)</label>
        <input type="number" asp-for="Maletas" class="form-control" id="Maletas" min="0" max="@ViewBag.StockMaletas" />
    </div>
    <div class="form-group">
        <label for="Comidas">Comidas (disponibles: @ViewBag.StockComidas)</label>
        <input type="number" asp-for="Comidas" class="form-control" id="Comidas" min="0" max="@ViewBag.StockComidas" />
    </div>
    <div class="form-group">
        <label for="Mascotas">Mascotas (disponibles: @ViewBag.StockMascotas)</label>
        <input type="number" asp-for="Mascotas" class="form-control" id="Mascotas" min="0" max="@ViewBag.StockMascotas" />
    </div>
    <button type="submit" class="btn btn-success">Siguiente</button>
</form>