@model ProyectoAerolineaWeb.Models.Servicios

<h2>Selecciona servicios adicionales</h2>

<form asp-action="ServiciosPost" method="post">
    <input type="hidden" asp-for="PasajerosId" />
    <input type="hidden" asp-for="VueloId" />
    <input type="hidden" asp-for="TarifaId" />
    <div class="form-group">
        <label for="Maletas">Maletas</label>
        <input type="number" asp-for="Maletas" class="form-control" id="Maletas" />
    </div>
    <div class="form-group">
        <label for="Comidas">Comidas</label>
        <input type="number" asp-for="Comidas" class="form-control" id="Comidas" />
    </div>
    <div class="form-group">
        <label for="Mascotas">Mascotas</label>
        <input type="number" asp-for="Mascotas" class="form-control" id="Mascotas" />
    </div>
    <button type="submit" class="btn btn-success">siguiente</button>
</form>