@model ProyectoAerolineaWeb.Models.Pasajeros
@if (TempData != null && TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData != null && TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div id="Cantidad" class="container-fluid">
    <h1>Su vuelo es el numero: @Model.VueloId</h1> 
    <h1 class="text-primary">Selecciona cantidad de pasajeros</h1>
    <form asp-action="Cantidad" method="post">
        <input type="hidden" asp-for="VueloId" />
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputState">Ancianos</label>
                <select id="inputState" class="form-control" asp-for="Ancianos">
                    <option selected>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label for="inputState">Adultos</label>
                <select id="inputState" class="form-control" asp-for="Adultos">
                    <option selected>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label for="inputState">Niños</label>
                <select id="inputState" class="form-control" asp-for="Niños">
                    <option selected>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
